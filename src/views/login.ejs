<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('partials/head.ejs') %>
  </head>
  <body
    class="relative flex h-screen items-center justify-center overflow-hidden bg-gray-100"
  >
    <!-- Animated Background Shapes -->
    <div
      class="absolute left-0 top-0 h-32 w-32 animate-bounce rounded-full bg-blue-300 opacity-50"
    ></div>
    <div
      class="absolute right-0 top-1/4 h-40 w-40 animate-ping rounded-full bg-red-300 opacity-50"
    ></div>
    <div
      class="absolute bottom-1/4 left-0 h-24 w-24 animate-bounce rounded-full bg-green-300 opacity-50"
    ></div>
    <div
      class="absolute bottom-0 right-0 h-32 w-32 animate-bounce rounded-full bg-yellow-300 opacity-50"
    ></div>
    <div
      class="absolute left-1/2 top-10 h-20 w-20 animate-bounce rounded-full bg-purple-300 opacity-50"
    ></div>
    <div
      class="absolute bottom-10 right-1/2 h-28 w-28 animate-ping rounded-full bg-pink-300 opacity-50"
    ></div>
    <div
      class="absolute left-1/3 top-1/3 h-16 w-16 animate-bounce rounded-full bg-indigo-300 opacity-50"
    ></div>
    <div
      class="absolute bottom-1/3 right-1/3 h-36 w-36 animate-bounce rounded-full bg-teal-300 opacity-50"
    ></div>

    <main class="z-10 w-full max-w-md rounded-lg bg-white p-8 shadow-md">
      <h1 class="mb-6 text-center text-2xl font-bold">Welcome to Our App</h1>
      <p class="mb-8 text-center text-gray-600">Please log in to continue</p>

      <form action="/auth/login" method="POST">
        <div class="mb-4">
          <label for="username" class="mb-2 block font-bold text-gray-700"
            >Username</label
          >
          <input
            type="text"
            id="username"
            name="username"
            class="w-full rounded-lg border px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
            required
          />
        </div>
        <div class="mb-6">
          <label for="password" class="mb-2 block font-bold text-gray-700"
            >Password</label
          >
          <input
            type="password"
            id="password"
            name="password"
            class="w-full rounded-lg border px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
            required
          />
        </div>
        <div class="mb-4">
          <button
            type="submit"
            class="w-full rounded-lg bg-blue-500 px-4 py-2 font-bold text-white transition duration-300 hover:bg-blue-700"
          >
            Log In
          </button>
        </div>
      </form>

      <p class="text-center text-gray-600">
        Don't have an account?
        <a href="/auth/signup" class="text-blue-500 hover:underline">Sign up</a>
      </p>
    </main>
  </body>
</html>
